                                    <button id="accordion">Help</button>
                                </div>
                                <div class="panel">
                                    <div class="help">
                                        <p><a href="#">Contact us</a></p>
                                        <p><a href="#">Terms & Privacy policy</a></p>
                                    </div>
                                </div>
                            </div>
                            <p class="logout"><a href="{{ path('app_logout') }}">Log Out</a></p>
